generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  lastname      String
  firstname     String
  phoneNumber   String
  messages      Message[]
  state         String
  protocole     String
  sms           String
  dateRef       String
  numOp         String
  ipp           String
  dateNaissance String
  medecin       String
  audioPath     String? 
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  fromUser  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Categorie {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  isActive  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
